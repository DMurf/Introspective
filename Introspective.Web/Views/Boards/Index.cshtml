    .kanban-board {
        /* position: relative; */
        float: left;
        background: #e2e4e6;
        transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
    }

        .kanban-board.disabled-board {
            opacity: 0.3;
        }

        .kanban-board.is-moving.gu-mirror {
            transform: rotate(3deg);
        }

            .kanban-board.is-moving.gu-mirror .kanban-drag {
                overflow: hidden;
                padding-right: 50px;
            }

        .kanban-board header {
            font-size: 16px;
            padding: 15px;
        }

            .kanban-board header .kanban-title-board {
                font-weight: 700;
                margin: 0;
                padding: 0;
                display: inline;
            }

            .kanban-board header .kanban-title-button {
                float: right;
            }

        .kanban-board .kanban-drag {
            min-height: 200px;
            padding: 20px;
        }

        .kanban-board:after {
            clear: both;
            display: block;
            content: "";
        }

